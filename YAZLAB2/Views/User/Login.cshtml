@model UserLoginModel

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px; border-radius: 20px; background-color: #ffffff;">
        <h3 class="text-center mb-4" style="font-weight: 600; color: #333;">Giriş Yap</h3>

        <!-- Uyarı Mesajı Alanı -->
        <div id="alertMessage" class="alert alert-danger" role="alert" style="display: none;"></div>

        <form id="loginForm" method="post" onsubmit="return validateForm()">
            <!-- Username Field -->
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label" style="font-weight: 500; color: #555;">Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control custom-input" placeholder="Kullanıcı Adı" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="form-group mb-4">
                <label asp-for="Şifre" class="form-label" style="font-weight: 500; color: #555;">Şifre</label>
                <input asp-for="Şifre" type="password" class="form-control custom-input" placeholder="Şifre" />
                <span asp-validation-for="Şifre" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary custom-btn">Giriş Yap</button>
                <a href="/User/Register" class="btn btn-secondary custom-btn">Kayıt Ol</a>
                <a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-link text-center custom-link">Şifremi Unuttum!</a>
            </div>
        </form>
    </div>
</div>

<!-- CSS Stil -->
<style>
    /* Genel Stil */
    body {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        font-family: 'Arial', sans-serif;
    }

    .container {
        padding: 20px;
    }

    .card {
        border-radius: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

    h3 {
        font-weight: 600;
        color: #333;
    }

    /* Giriş Formu */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .custom-input {
        border-radius: 25px;
        padding: 15px;
        border: 1px solid #ddd;
        font-size: 1rem;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

        .custom-input:focus {
            border-color: #2575fc;
            box-shadow: 0 0 8px rgba(37, 117, 252, 0.5);
        }

    /* Butonlar */
    .custom-btn {
        padding: 12px 20px;
        font-size: 1rem;
        border-radius: 25px;
        transition: transform 0.2s ease-in-out, background-color 0.3s ease;
    }

        .custom-btn:hover {
            transform: translateY(-3px);
            background-color: #1e63d1;
        }

    .btn-secondary.custom-btn {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary.custom-btn:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    /* Şifre Yenile Linki */
    .custom-link {
        color: #2575fc;
        text-decoration: none;
        font-weight: 600;
        display: block;
        text-align: center;
        margin-top: 10px;
    }

        .custom-link:hover {
            color: #1e63d1;
        }

    /* Uyarı Mesajı */
    .alert {
        margin-top: 20px;
        font-weight: 500;
        padding: 15px;
    }

</style>

<!-- JavaScript -->
<script>
    function validateForm() {
        // Uyarı mesajı alanını sıfırla
        const alertMessage = document.getElementById("alertMessage");
        alertMessage.style.display = "none";
        alertMessage.innerHTML = "";

        // Kullanıcı adı ve şifre alanlarını al
        const username = document.querySelector('input[name="Username"]').value;
        const password = document.querySelector('input[name="Şifre"]').value;

        // Basit doğrulama: Kullanıcı adı ve şifre boş olamaz
        if (!username || !password) {
            alertMessage.innerHTML = "Kullanıcı adı ve şifre boş olamaz.";
            alertMessage.style.display = "block";
            return false; // Formu gönderme
        }

        return true;
    }
</script>
