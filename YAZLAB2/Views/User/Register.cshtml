@model YAZLAB2.Models.UserRegisterModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2>@ViewData["Title"]</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="UserName">Kullanıcı Adı</label>
        <input type="text" class="form-control" id="UserName" name="UserName" value="@Model.UserName" required />
    </div>

    <div class="form-group">
        <label for="Ad">Ad</label>
        <input type="text" class="form-control" id="Ad" name="Ad" value="@Model.Ad" required />
    </div>

    <div class="form-group">
        <label for="Soyad">Soyad</label>
        <input type="text" class="form-control" id="Soyad" name="Soyad" value="@Model.Soyad" required />
    </div>

    <div class="form-group">
        <label for="Email">E-posta</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
    </div>

    <div class="form-group">
        <label for="TelefonNumarasi">Telefon Numarası</label>
        <input type="text" class="form-control" id="TelefonNumarasi" name="TelefonNumarasi" value="@Model.TelefonNumarasi" required />
    </div>

    <div class="form-group">
        <label for="Konum">Konum</label>
        <input type="text" class="form-control" id="Konum" name="Konum" value="@Model.Konum" required />
    </div>

    <div class="form-group">
        <label for="DogumTarihi">Doğum Tarihi</label>
        <input type="date" class="form-control" id="DogumTarihi" name="DogumTarihi" value="@Model.DogumTarihi.ToString("yyyy-MM-dd")" required />
    </div>

    <div class="form-group">
        <label for="Cinsiyet">Cinsiyet</label>
        <select class="form-control" id="Cinsiyet" name="Cinsiyet" required>
            <option value="Erkek">Erkek</option>
            <option value="Kadın">Kadın</option>
        </select>
    </div>

    <div class="form-group">
        <label for="IlgiAlanlari">İlgi Alanları</label>
        <div>
            @foreach (var kategori in Model.Kategoriler)
            {
                <div class="form-check">
                    <input type="checkbox"
                           class="form-check-input"
                           id="kategori_@kategori.Value"
                           name="IlgiAlanlari"
                           value="@kategori.Value"
                    @if (Model.IlgiAlanlari != null && Model.IlgiAlanlari.Contains(int.Parse(kategori.Value)))
                    {
                        @:checked
                    } />
                    <label class="form-check-label" for="kategori_@kategori.Value">
                        @kategori.Text
                    </label>
                </div>
            }
        </div>
    </div>


    <div class="form-group">
        <label for="ProfilFoto">Profil Fotoğrafı</label>
        <input type="text" class="form-control" id="ProfilFoto" name="ProfilFoto" value="@Model.ProfilFoto" />
    </div>

    <div class="form-group">
        <label for="Şifre">Şifre</label>
        <input type="password" class="form-control" id="Şifre" name="Şifre" required />
    </div>

    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>
