@model YAZLAB2.Models.User

@{
    ViewData["Title"] = "Toplam Puan";
}

<h1>Toplam Puan</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="puan-container">
    <h3>Toplam Puan: @ViewBag.ToplamPuan</h3> <!-- ViewBag ile gönderilen toplam puanı gösteriyoruz -->
</div>

<style>
    .puan-container {
        margin: 20px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

        .puan-container h3 {
            margin-bottom: 10px;
        }

    .alert {
        margin-bottom: 20px;
        padding: 10px;
        border-radius: 5px;
    }
</style>
