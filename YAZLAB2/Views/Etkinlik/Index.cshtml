@model IEnumerable<YAZLAB2.Models.Etkinlik>

@{
    ViewData["Title"] = "Etkinliklerim";
}

<div class="container mt-5">
    <!-- Geri Butonu -->
    <div class="mb-4">
        <a href="@Url.Action("UserHubArea", "User", new { Username = User.Identity.Name })"
           class="btn btn-secondary shadow-sm">
            <i class="bi bi-arrow-left"></i> Geri
        </a>
    </div>

    <!-- Başlık ve Yeni Etkinlik Oluştur -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">@ViewData["Title"]</h2>
        <a href="@Url.Action("Create")" class="btn btn-success shadow-sm">Yeni Etkinlik Oluştur</a>
    </div>

    <!-- Tablo -->
    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm rounded">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Etkinlik Adı</th>
                    <th>Açıklama</th>
                    <th>Tarih</th>
                    <th>Konum</th>
                    <th class="text-center">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">Henüz bir etkinlik eklenmemiş.</td>
                    </tr>
                }
                else
                {
                    @foreach (var etkinlik in Model)
                    {
                        <tr>
                            <td>@etkinlik.EtkinlikAdi</td>
                            <td>@etkinlik.Aciklama</td>
                            <td>@etkinlik.Tarih.ToString("dd/MM/yyyy")</td>
                            <td>@etkinlik.Konum</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Details", new { id = etkinlik.EtkinlikId })"
                                       class="btn btn-info btn-sm text-white shadow-sm">Detaylar</a>
                                    <a href="@Url.Action("Edit", new { id = etkinlik.EtkinlikId })"
                                       class="btn btn-warning btn-sm shadow-sm">Düzenle</a>
                                    <form method="post" action="@Url.Action("Delete", new { id = etkinlik.EtkinlikId })" style="display:inline;">
                                        <button type="submit"
                                                class="btn btn-danger btn-sm shadow-sm"
                                                onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                            Sil
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Kartlar -->
    <div class="mt-5">
        <h3 class="text-primary">Katıldığım Etkinlikler</h3>
        <div class="row">
            @if (!Model.Any())
            {
                <div class="col-12 text-center text-muted">Henüz bir etkinlik eklenmemiş.</div>
            }
            else
            {
                @foreach (var etkinlik in Model)
                {
                    <div class="col-md-4 col-lg-3 mb-4">
                        <div class="card shadow-sm h-100">
                            <!-- Örnek etkinlik resmi -->
                            <img src="https://via.placeholder.com/300x200"
                                 class="card-img-top"
                                 alt="Etkinlik Resmi">
                            <div class="card-body">
                                <h5 class="card-title text-truncate">@etkinlik.EtkinlikAdi</h5>
                                <p class="card-text">
                                    <strong>Tarih:</strong> @etkinlik.Tarih.ToString("dd/MM/yyyy")
                                </p>
                            </div>
                            <div class="card-footer text-center">
                                <a href="@Url.Action("Details", new { id = etkinlik.EtkinlikId })"
                                   class="btn btn-primary btn-sm">Detaylar</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
