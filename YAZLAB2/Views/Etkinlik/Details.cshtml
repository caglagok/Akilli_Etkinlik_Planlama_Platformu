@model YAZLAB2.Models.Etkinlik

@{
    ViewData["Title"] = "Etkinlik Detayı";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>@Model.EtkinlikAdi</h3>
    <p><strong>Açıklama:</strong> @Model.Aciklama</p>
    <p><strong>Tarih:</strong> @Model.Tarih.ToString("dd/MM/yyyy")</p>
    <p><strong>Konum:</strong> @Model.Konum</p>
</div>

<!-- Katılım Butonu -->
<form asp-action="Katil" method="post" asp-route-etkinlikId="@Model.EtkinlikId">
    <button type="submit" class="btn btn-primary">Etkinliğe Katıl</button>
</form>

<a href="@Url.Action("UserHubArea")" class="btn btn-secondary">Geri</a>
