@model EtkinlikDetayViewModel

<div class="container mt-5">
    <div class="card mx-auto shadow-lg" style="max-width: 800px; border: none;">
        <!-- Etkinlik Resmi -->
        @if (!string.IsNullOrEmpty(Model.EtkinlikResmi))
        {
            <img src="@Model.EtkinlikResmi" class="card-img-top rounded-top" alt="Etkinlik Resmi" style="max-height: 400px; object-fit: cover;" />
        }

        <!-- Etkinlik Detayları -->
        <div class="card-body">
            <h2 class="card-title text-center fw-bold text-primary">@Model.EtkinlikAdi</h2>
            <p class="text-muted text-center mb-4">
                <i class="fas fa-tag"></i> Kategori: <strong>@Model.KategoriAdi</strong>
            </p>

            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <strong><i class="fas fa-info-circle"></i> Açıklama:</strong> @Model.Aciklama
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-calendar-alt"></i> Tarih:</strong> @Model.Tarih.ToString("dd/MM/yyyy")
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-clock"></i> Saat:</strong> @Model.Saat
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-hourglass-half"></i> Süre:</strong> @Model.EtkinlikSuresi
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-map-marker-alt"></i> Konum:</strong> @Model.Konum
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-user"></i> Oluşturan Kullanıcı:</strong> @Model.KullaniciAdi
                </li>
                <li class="list-group-item">
                    <strong><i class="fas fa-check-circle"></i> Onay Durumu:</strong>
                    <span class="badge @(Model.OnayDurumu ? "bg-success" : "bg-danger")">
                        @(Model.OnayDurumu ? "Onaylı" : "Onaysız")
                    </span>
                </li>
            </ul>
        </div>

        <!-- Footer -->
        <div class="card-footer bg-light text-center">
            <a href="@Url.Action("TumEtkinlikler", "Admin")" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Geri Dön
            </a>
        </div>
    </div>
</div>

<!-- Stil -->
<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Roboto', sans-serif;
    }

    .card {
        border-radius: 10px;
    }

    .card-title {
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
    }

    .list-group-item {
        font-size: 1rem;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5em 0.75em;
    }

    .btn-secondary {
        border-radius: 20px;
    }

        .btn-secondary:hover {
            background-color: #495057;
            border-color: #495057;
        }
</style>
