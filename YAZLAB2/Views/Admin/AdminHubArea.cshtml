@{
    ViewData["Title"] = "Admin Hub Area";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQkxmmo1727qSVOSQ8Qwxiu1NOl0b-JG4SWxQ&s');
            background-size: cover;
            background-position: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #fff;
            min-height: 100vh;
        }

        .admin-container {
            background: rgba(0, 0, 0, 0.7);
            border-radius: 15px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.5);
            padding: 40px;
            max-width: 900px;
            margin: 0 auto;
        }

            .admin-container a {
                transition: all 0.3s ease;
                border-radius: 8px;
                padding: 15px;
                font-size: 1.1em;
            }

                .admin-container a:hover {
                    transform: scale(1.05);
                    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
                }

        .btn {
            font-size: 1.2rem;
            padding: 15px;
            transition: all 0.3s ease;
        }

            .btn i {
                margin-right: 10px;
            }

        .container py-5 h1 {
            font-size: 2.5rem;
            font-weight: bold;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn-dark {
            background-color: #343a40;
            border-color: #343a40;
        }

        .btn-light {
            background-color: #f8f9fa;
            border-color: #f8f9fa;
        }

    </style>
</head>

<body>
    <div class="container py-5">
        <h1 class="text-center text-light mb-4">Admin Paneline Hoşgeldiniz</h1>
        <div class="admin-container mx-auto p-4 text-center">
            <div class="row gy-3">
                <div class="col-md-6">
                    <a href="@Url.Action("TumKullanicilar", "Admin")" class="btn btn-primary w-100">
                        <i class="fas fa-users"></i> Tüm Kullanıcıları Listele
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="@Url.Action("TumEtkinlikler", "Admin")" class="btn btn-info w-100">
                        <i class="fas fa-calendar-alt"></i> Tüm Etkinlikleri Listele
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="/Kategori/Index" class="btn btn-success w-100">
                        <i class="fas fa-list"></i> Olan Kategoriler
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="@Url.Action("Index", "Statistics")" class="btn btn-warning w-100">
                        <i class="fas fa-chart-bar"></i> İstatistikler
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="/Bildirim/AdminBildirimler" class="btn btn-danger w-100">
                        <i class="fas fa-bell"></i> Admin Bildirimler
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="/Mesaj/MesajGonder" class="btn btn-secondary w-100">
                        <i class="fas fa-envelope"></i> Mesaj Gönder
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="@Url.Action("TumPuanlar", "Admin")" class="btn btn-dark w-100">
                        <i class="fas fa-star"></i> Tüm Kullanıcıların Puanları
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="@Url.Action("DownloadUserEventReport", "Statistics")" class="btn btn-light w-100">
                        <i class="fas fa-download"></i> Kullanıcı Etkinlik Raporunu İndir
                    </a>
                </div>
                <div class="col-12">
                    <a href="/User/Login" class="btn btn-outline-danger w-100">
                        <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                    </a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
