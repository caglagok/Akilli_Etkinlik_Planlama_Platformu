@model YAZLAB2.Models.KullaniciEtkinlikViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">@Model.User.Ad @Model.User.Soyad</h2>

    <div class="row">
        <div class="col-md-6">
            <h3 class="mb-3">Katıldığı Etkinlikler:</h3>
            <ul class="list-group">
                @if (Model.KatildigiEtkinlikler != null && Model.KatildigiEtkinlikler.Any())
                {
                    foreach (var etkinlik in Model.KatildigiEtkinlikler)
                    {
                        <li class="list-group-item">@etkinlik.EtkinlikAdi</li>
                    }
                }
                else
                {
                    <li class="list-group-item">Katıldığı etkinlik yok.</li>
                }
            </ul>
        </div>
        <div class="col-md-6">
            <h3 class="mb-3">Düzenlediği Etkinlikler:</h3>
            <ul class="list-group">
                @if (Model.DuzenledigiEtkinlikler != null && Model.DuzenledigiEtkinlikler.Any())
                {
                    foreach (var etkinlik in Model.DuzenledigiEtkinlikler)
                    {
                        <li class="list-group-item">@etkinlik.EtkinlikAdi</li>
                    }
                }
                else
                {
                    <li class="list-group-item">Düzenlediği etkinlik yok.</li>
                }
            </ul>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
