@model IEnumerable<YAZLAB2.Models.User>
@{
    ViewData["Title"] = "Tüm Kullanıcılar";
}

<h1 class="page-title">Tüm Kullanıcılar</h1>

@if (Model == null || !Model.Any())
{
    <p class="no-users-message">Hiç kullanıcı bulunamadı.</p>
}
else
{
    <div class="table-container">
        <table class="user-table">
            <thead>
                <tr>
                    <th>Profil Resmi</th>
                    <th>Ad Soyad</th>
                    <th>Email</th>
                    <th>Kullanıcı Adı</th>
                    <th>Doğum Tarihi</th>
                    <th>Cinsiyet</th>
                    <th>Aksiyonlar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <img src="@user.ProfilFoto" alt="Profil Resmi" class="profile-pic">
                        </td>
                        <td>@user.Ad @user.Soyad</td>
                        <td>@user.Email</td>
                        <td>@user.UserName</td>
                        <td>@user.DogumTarihi?.ToString("dd/MM/yyyy")</td>
                        <td>@user.Cinsiyet</td>
                        <td>
                            <form method="post" action="@Url.Action("KullaniciSil", "Admin", new { userId = user.Id })">
                                <button type="submit" class="btn-action btn-delete">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<style>
    /* General Page Styling */
    .page-title {
        font-size: 2rem;
        margin-bottom: 20px;
        color: #2c3e50;
        text-align: center;
        font-weight: bold;
    }

    .no-users-message {
        font-size: 1.2rem;
        color: #7f8c8d;
        text-align: center;
    }

    /* Table Container Styling */
    .table-container {
        margin: 20px auto;
        max-width: 1200px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
        background-color: #fff;
    }

    /* Table Styling */
    .user-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .user-table th,
        .user-table td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #ecf0f1;
        }

        .user-table th {
            background-color: #34495e;
            color: #ecf0f1;
            font-weight: bold;
        }

        .user-table tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .user-table tr:hover {
            background-color: #ecf0f1;
        }

    /* Profile Picture Styling */
    .profile-pic {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #bdc3c7;
        transition: transform 0.3s ease;
    }

        .profile-pic:hover {
            transform: scale(1.1);
            border-color: #34495e;
        }

    /* Button Styling */
    .btn-action {
        padding: 8px 16px;
        font-size: 0.9rem;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-delete {
        background-color: #e74c3c;
        color: #fff;
    }

        .btn-delete:hover {
            background-color: #c0392b;
            box-shadow: 0px 4px 8px rgba(231, 76, 60, 0.2);
        }

</style>
