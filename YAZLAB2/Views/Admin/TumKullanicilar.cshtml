@model IEnumerable<YAZLAB2.Models.User>
@{
    ViewData["Title"] = "Tüm Kullanıcılar";
}

<h1 class="page-title">Tüm Kullanıcılar</h1>

<!-- Back Button -->
<a href="@Url.Action("AdminHubArea", "Admin")" class="back-button">
    <i class="fas fa-arrow-left"></i> Geri
</a>

@if (Model == null || !Model.Any())
{
    <p class="no-users-message">Hiç kullanıcı bulunamadı.</p>
}
else
{
    <div class="table-container">
        <table class="user-table">
            <thead>
                <tr>
                    <th>Profil Resmi</th>
                    <th>Ad Soyad</th>
                    <th>Email</th>
                    <th>Kullanıcı Adı</th>
                    <th>Doğum Tarihi</th>
                    <th>Cinsiyet</th>
                    <th>Aksiyonlar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <img src="@user.ProfilFoto" alt="Profil Resmi" class="profile-pic">
                        </td>
                        <td>@user.Ad @user.Soyad</td>
                        <td>@user.Email</td>
                        <td>@user.UserName</td>
                        <td>@user.DogumTarihi?.ToString("dd/MM/yyyy")</td>
                        <td>@user.Cinsiyet</td>
                        <td>
                            <!-- Kullanıcıyı Düzenle Butonu -->
                            <a href="@Url.Action("KullaniciDuzenle", "Admin", new { id = user.Id })" class="btn-action btn-edit">Düzenle</a>

                            <form asp-action="KullaniciSil" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn-action btn-delete">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<style>
    /* General Page Styling */
    .page-title {
        font-size: 2rem;
        margin-bottom: 20px;
        color: #2c3e50;
        text-align: center;
        font-weight: bold;
    }

    .no-users-message {
        font-size: 1.2rem;
        color: #7f8c8d;
        text-align: center;
    }

    /* Table Container Styling */
    .table-container {
        margin: 20px auto;
        max-width: 1200px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
        overflow: hidden;
        background-color: #fff;
    }

    /* Table Styling */
    .user-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .user-table th,
        .user-table td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #ecf0f1;
        }

        .user-table th {
            background-color: #34495e;
            color: #ecf0f1;
            font-weight: bold;
        }

        .user-table tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        .user-table tr:hover {
            background-color: #ecf0f1;
        }

    /* Profile Picture Styling */
    .profile-pic {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #bdc3c7;
        transition: transform 0.3s ease;
    }

        .profile-pic:hover {
            transform: scale(1.1);
            border-color: #34495e;
        }

    /* Geri Butonu */
    .back-button {
        position: absolute;
        top: 80px;
        left: 20px;
        display: inline-flex;
        align-items: center;
        padding: 10px 15px;
        font-size: 1rem;
        font-weight: bold;
        color: #fff;
        background-color: #3498db;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease, transform 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .back-button i {
            margin-right: 8px;
        }

        .back-button:hover {
            background-color: #2980b9;
            transform: translateY(-2px);
        }

        .back-button:active {
            transform: translateY(1px);
        }
    /* Button Styling */
    .btn-action {
        padding: 8px 16px;
        font-size: 0.9rem;
        font-weight: bold;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background-color: #3498db; /* Blue background */
        color: #fff;
    }

        .btn-edit:hover {
            background-color: #2980b9; /* Darker blue on hover */
            box-shadow: 0px 4px 8px rgba(52, 152, 219, 0.2); /* Add a subtle shadow on hover */
        }

    .btn-delete {
        background-color: #e74c3c;
        color: #fff;
    }

        .btn-delete:hover {
            background-color: #c0392b;
            box-shadow: 0px 4px 8px rgba(231, 76, 60, 0.2);
        }


</style>
