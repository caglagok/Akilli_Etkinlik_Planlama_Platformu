@model List<Bildirim>

@{
    ViewData["Title"] = "Admin Bildirimleri";
}

<div class="container mt-5">
    <!-- Geri Butonu -->
    <div class="mb-4">
        <a href="@Url.Action("AdminHubArea", "Admin")" class="btn btn-secondary btn-sm">
            <i class="fa fa-arrow-left"></i> Geri Dön
        </a>
    </div>

    <!-- Sayfa Başlığı -->
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <!-- Bildirim Tablosu -->
    <div class="table-responsive shadow-lg rounded-lg bg-white">
        <table class="table table-hover align-middle text-center table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Mesaj</th>
                    <th>Tarih</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bildirim in Model)
                {
                    <tr>
                        <td>@bildirim.Mesaj</td>
                        <td>@bildirim.BildirimTarih.ToString("g")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Stil -->
<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Roboto', sans-serif;
    }

    .container {
        max-width: 1100px; /* Daha geniş bir alan */
    }

    .table {
        width: 100%; /* Tabloyu tam genişlikte yapar */
        border-radius: 10px;
    }

    .btn {
        font-size: 1rem;
        font-weight: 600;
        border-radius: 50px;
        padding: 8px 15px;
    }

    .btn-sm {
        font-size: 0.9rem;
        padding: 5px 10px;
    }

    .table-dark {
        background-color: #343a40;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .shadow-lg {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .rounded-lg {
        border-radius: 15px;
    }

    .bg-white {
        background-color: #fff;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .fa {
        margin-right: 5px;
    }
</style>

<!-- Bootstrap JS ve jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
