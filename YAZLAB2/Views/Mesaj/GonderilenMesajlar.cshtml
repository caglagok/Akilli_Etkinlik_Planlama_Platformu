@model List<YAZLAB2.Models.Mesaj>

<h2>Gönderdiğiniz Mesajlar</h2>

@if (Model.Count > 0)
{
    <ul>
        @foreach (var mesaj in Model)
        {
            <li>
                <strong>@mesaj.AliciID</strong> - @mesaj.GonderimZamani.ToString("dd/MM/yyyy HH:mm")<br />
                @mesaj.MesajMetni
            </li>
        }
    </ul>
}
else
{
    <p>Henüz gönderdiğiniz mesaj yok.</p>
}
